{% extends 'Pagelayout.twig' %}

{%  block body %}

    <div class="row justify-content-center">
        <h2>Création d'un ticket</h2>
    </div>

   {% if resultat is defined %}
      <p class="alert {{ resultat }}">{{ message }}</p>
  {% endif %}
        

    <div class="row justify-content-center mt-3">
        <form class="col-6" action="{{ pathRoot ~ 'ticket/createticket' }}" name="createForm" method="post">
            <div class="mb-3">
                <label for="typeDemande" class="form-label">Sélectionner un type de demande</label>
                <select class="form-select form-select-sm col-sm-3 mb-3" name="typeDemande" id="typeDemande" required>
                    {% for typeDemande in listTypeDemande %}
                        <option value="{{ typeDemande.TD_id }}">{{ typeDemande.TD_typeDemande }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="mb-3">
                <label for="priorite" class="form-label">Sélectionner une priorité</label>
                <select class="form-select form-select-sm col-sm-3 mb-3" name="priorite" id="priorite" required>
                    {% for priorite in listPriorite %}
                        <option value="{{ priorite.PR_id }}">{{ priorite.PR_priorite }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="sujet" class="form-label">Sujet : </label>
                <textarea type="text" class="form-control" id="sujet" name="sujet" required></textarea>
            </div>

            <div class="form-group mb-3">
                <label for="message" class="form-label">Message : </label>
                <textarea type="text" class="form-control" id="message" name="message" rows="3" required></textarea>
            </div>

            <div class="input-group justify-content-end">
                <button type="submit" class="btn btn-primary" name="ValidTicket" >Créer</button>
            </div>
        </form>
    </div>

{%  endblock %}